{{>layout/header}}

<h1>게시글 보기</h1>

<div class="col-md-12">
    <div class="col-md-12">
        <form>
            <div style="padding-bottom: 31px;">
                <div class="form-group">
                    <label for="title">글 번호</label>
                    <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
                </div>
                <div class="form-group">
                    <p>
                        {{post.title}}
                    </p>
                </div>
                <div class="form-group">
                    <span>
                        {{post.author}}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="content">{{post.content}}</textarea>
                <script>
                    let editor;
                    ClassicEditor
                        .create( document.querySelector( '#content' ) )
                        .then( newEditor => {
                            editor = newEditor;
                        })
                        .catch( error => {
                            console.error( error );
                        } );
                </script>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">목록</a>
        {{#userName}}
            <a href="/posts/update/{{post.id}}" role="button" class="btn btn-primary">수정</a>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        {{/userName}}
    </div>
</div>

{{>layout/footer}}
<script src="/js/app/view.js"></script>
