{{> layout/header}}

    <div class="col-md-12">
        {{#userName}}
            <div class="row animate__animated animate__slideInUp animate__delay-0.5s">
                <div class="col-md-6">
                    <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                </div>
            </div>
        {{/userName}}
        <br>
        <div class="animate__animated animate__slideInUp animate__delay-0.5s">
	        <!-- 목록 출력 영역 -->
	        <table class="table table-horizontal table-bordered">
	            <thead class="thead-strong">
	            <tr>
	                <th>게시글번호</th>
	                <th>제목</th>
	                <th>작성자</th>
	                <th>최종수정일</th>
	            </tr>
	            </thead>
	            <tbody id="tbody">
	            {{#posts}}
	            <tr>
	                <td>{{id}}</td>
	                <td><a href="/posts/{{id}}">{{title}}</a></td>
	                <td>{{author}}</td>
	                <td>{{modifiedDate}}</td>
	            </tr>
	            {{/posts}}
	            </tbody>
	        </table>
        </div>
     </div>

{{>layout/footer}}
<!--index.js 추가-->
<script src="/js/app/index.js"></script>